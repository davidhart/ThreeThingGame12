uniform sampler2D Texture0 : TEXUNIT0 ;

uniform float4 Color;

void main(
	float2 in v_TexCoord	: TEXCOORD0,
	float3 in v_Normal 		: TEXCOORD1,
	float4 out color		: COLOR
)
{
	float NdotL = saturate(dot(v_Normal, normalize(float3(0.0f, 0.1f, 0.0f))));

	//color = float4(v_TexCoord.x, v_TexCoord.y, 0, 1);
	color = tex2D(Texture0, v_TexCoord) * Color * float4(NdotL, NdotL, NdotL, 1);
}
